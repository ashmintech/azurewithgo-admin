<!DOCTYPE html>
<html>
<head>    
<title>Globomantics Admin Portal</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="/admin/js/jquery.min.js"></script>
  <script src="/admin/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
 <link href="/admin/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  <link href="/admin/css/style-home.css" rel="stylesheet">
  <link rel="shortcut icon" type="image/x-icon" href="/admin/images/G.png" />

</head>
<body>

{{template "topmenu"}}

<div class="table-responsive-sm col-md-6">
<h3>Device Details</h3>

<table class="table table-hover table-sm">

  <thead class="thead-dark">
    <tr>
      <th scope="col">Device Name</th>
      <th scope="col">Device Type</th>
      <th scope="col">Active</th>
      <th scope="col">Creation Date</th>
     
    </tr>
  </thead>

  <tbody>
    <tr>
      {{$d := .Dev}}
      <th scope="row">{{$d.DeviceName}}</th>
      <td>{{$d.DeviceType}}</td>
    
      <td>
          {{$d.DeviceStatus}}
          {{if eq $d.DeviceStatus "Active"}}
            <a href="/admin/devicestatus/{{$d.DeviceID}}"><input type="button" class="btn btn-danger" value="Deactivate"></a>
          {{else}}
            <a href="/admin/devicestatus/{{$d.DeviceID}}"><input type="button" class="btn btn-primary" value="Activate"></a>
          {{end}}
      </td>

      <td>{{$d.DeviceCreationDate}}</td>
     
    </tr>
  </tbody>
</table>
</div>

<div class="table-responsive-sm col-md-6">
<h3>Customer</h3>
   
{{$c := .Cust}}
   
{{if $c}}


<table class="table table-hover table-sm">

  <thead class="thead-dark">
    <tr>
      <th scope="col">Customer Name</th>
      <th scope="col">Subscription Type</th>
      <th scope="col">Active</th>
      <th scope="col">Member Since</th>
     
    </tr>
  </thead>

  <tbody>
    <tr>
      
      <th scope="row">{{$c.LName}}, {{$c.FName}} </th>
      <td>{{$c.SubType}}</td>
      <td>{{$c.Active}}</td>
      <td>{{$c.CreationDate}}</td>
     
    </tr>
  </tbody>
</table>



{{else}}
<h5>Customer Not Found</h5>
{{end}}
<br>
</div>

{{if eq $d.DeviceStatus "Active"}}

  <div class="table-responsive-sm col-md-8">
  <h3>Device Data</h3>
  <button type="button" class="btn btn-success btn-lg">
    Date: <span class="badge badge-light">May 22, 2021</span>
  </button>

  <button type="button" class="btn btn-secondary btn-lg">
    Fridge Temp: <span class="badge badge-light">-4&#176; F</span>
  </button>

  <button type="button" class="btn btn-primary btn-lg">
    Freezer Temp: <span class="badge badge-light">4</span>
  </button>

  <button type="button" class="btn btn-primary btn-lg">
    Fridge Temp: <span class="badge badge-light">4</span>
  </button>
  </div>
  <div class="col-md-2">
  </div>

  <div class="col-md-2">
  </div>
  <div class="table-responsive-sm col-md-8">
  <h3>Device Monitoring</h3>
  <button type="button" class="btn btn-success btn-lg">
    Date: <span class="badge badge-light">May 22, 2021</span>
  </button>

  <button type="button" class="btn btn-secondary btn-lg">
    Fridge Temp: <span class="badge badge-light">-4&#176; F</span> Range
  </button>

  <button type="button" class="btn btn-primary btn-lg">
    Freezer Temp: <span class="badge badge-light">4</span>
  </button>

  <button type="button" class="btn btn-primary btn-lg">
    Fridge Temp: <span class="badge badge-light">4</span>
  </button>

  <button type="button" class="btn btn-primary btn-lg">
    Fridge Temp: <span class="badge badge-light">4</span>
  </button>
  </div>
  <div class="col-md-2">
  </div>


  
{{else}}
<h3>Device is not active.</h3> <a href="/admin/devicestatus/{{$d.DeviceID}}">Activate</a>
{{end}}


</body>

</html>