<!DOCTYPE html>
<html>
{{template "head"}}
<body>

<div class="table-responsive-sm col-md-6">
  <h3>Device Anomaly Data (Shows data for last 7 Days)</h3>

   {{if .}}

  <table class="table table-hover table-sm">

  <thead class="thead-dark">
    <tr>
      <th scope="col">Date/Time</th>
      <th scope="col">Temp. </th>
      <th scope="col">Count</th>
    </tr>
  </thead>
  <tbody>
  {{range .}}
    <tr>
    <th scope="row">{{.DateTime}}</th>
    <td>{{.FridgeTemp}}</td>
    <td>{{.CountFridgeTemp}}</td>
    </tr>
 {{end}}
</table> 
 {{else}}
 <br>
      <p>No Anomaly data or not able to receive Anomaly Data</p>
 {{end}}
</div>

 
  </body>
  </html> 