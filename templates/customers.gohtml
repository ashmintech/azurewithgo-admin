<!DOCTYPE html>
<html>
{{template "head"}}
<body>

{{template "topmenu"}}
  
 <div class="table-responsive-sm col-md-8">
<h3>Customers</h3>
<table class="table table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
      <th scope="col">Active</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
  
  {{range .}}
    <tr>
      <th scope="row">{{.LName}}, {{.FName}}</th>
      <td>{{.Address}}</td>
      <td>{{.Email}}</td>
      {{if eq .Active true}} 
        <td>Yes</td>
      {{else}}
        <td>No</td>
      {{end}}
      <td><a href="/admin/customers/{{.CustomerID}}">Customer details</a></td>
    </tr>
  {{end}} 
   
  </tbody>
</table>
</div>
 
</body>
</html>